<div class="container">
<h1 class="text-center" >MEMBERS ONLY</h1>
<h1>Index page for posts</h1>

<div>
  <% @posts.each do |post| %>
        <% if logged_in? %>
        <p>Created by: &nbsp<%= post.user.name %></p>
        <p>At &nbsp<%= post.updated_at %></p>
        <% end %>
        <h5 class="blog-post-title"><%= post.title %></h5>
        
        <ul class="list-group">
          <h5><li class="list-group-item"><%= post.body %></li></h5>
        </ul>
    </li>
	<hr></br>
  <% end %>
	<% if logged_in? %>
    <a class="btn btn-primary" href="/posts/new" role="button">Create Post</a>
	 <% end %>
</div>
</div>
